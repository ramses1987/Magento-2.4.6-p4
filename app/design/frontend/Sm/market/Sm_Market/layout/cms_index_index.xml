<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <move element="page.messages" destination="page.wrapper" before="-"/>
        <referenceBlock name="breadcrumbs" remove="true"/>

        <referenceBlock name="theme_header">
            <block class="Magento\Cms\Block\Block" name="slider-header" after="-">
                <arguments>
                    <argument name="block_id" xsi:type="string">slider-header</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
