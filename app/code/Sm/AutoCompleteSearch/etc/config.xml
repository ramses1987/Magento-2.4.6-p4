<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <sm_autocompletesearch>
            <autocompletesearch_main>
                <search_enable>1</search_enable>
                <search_delay>100</search_delay>
                <autocomplete_fields>suggest,product</autocomplete_fields>
                <suggested_result_number>3</suggested_result_number>
                <product_result_number>5</product_result_number>
                <product_result_fields>name,image,reviews_rating,description,price</product_result_fields>
            </autocompletesearch_main>
        </sm_autocompletesearch>
    </default>
</config>
